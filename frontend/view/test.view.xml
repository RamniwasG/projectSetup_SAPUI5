<core:View
	controllerName="pbc.sap.ui.sapTest.test"
	xmlns="sap.suite.ui.commons"
	xmlns:m="sap.m"
	xmlns:n="sap.tnt"
	xmlns:u="sap.ui.unified"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
  	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<m:Panel enabled="false">
		<l:Grid defaultSpan="L12 M12 S12">
			<l:VerticalLayout class="sapUiSmallMargin" >
				<m:Label text="Enter your email:">
				</m:Label>
				<m:Input id="firstname" required="true">
				</m:Input>
				<l:HorizontalLayout class="sapUiSmallMargin" >
					<m:Button text="Default" press="onPressDefault"></m:Button>
					<m:Button type="Reject" text="Reject" press="onPressReject"></m:Button>
				</l:HorizontalLayout>
		</l:VerticalLayout>
		</l:Grid>
	</m:Panel>
</core:View>